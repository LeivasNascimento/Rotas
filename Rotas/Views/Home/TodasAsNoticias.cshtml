@model IEnumerable<Rotas.Models.Noticia>
@{
    ViewBag.Title = "TodasAsNoticias";
}

<h2>Todas As Notícias</h2>
@*<div>
    @foreach (var noticia in Model)
    {
        @noticia.Titulo
    }
</div>*@

<div>

<ul>
    @foreach (var item in Model)
    {
        <li>
            @Html.ActionLink(item.Titulo, "MostrarNoticia", "Home", new
            {
                @noticiaId = item.NoticiaId,
            @categoria = item.Categoria.ToLower(),
            @titulo = item.Titulo.ToLower()
            }, null)

            <em>
                @Html.DisplayFor(x => item.Categoria)
            </em>
        <b>@Html.DisplayFor(x => item.Data) </b>
    </li>
}
</ul>
</div>

